<div class="house">
  <h3 class="name"><%= @house.name %></h3>
  <p class="motto"><%= @house.motto %></p>

  <div class="characters">
      <h4>Characters</h4>
      <ul>
        <% @house.characters.each do |char| %>
          <li class="character">
            <p><%= link_to "#{char.name}", house_character_path(@house, char) %></p>
          </li>
        <% end %>
      </ul>
  </div>
  <h3><%= link_to "Edit House", edit_house_path(@house) %> | <%= link_to "Add Character", new_house_character_path(@house) %></h3>

</div>
